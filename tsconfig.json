{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "bundler",

    /* Type Checking - Strict Mode (ADR-002) */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,

    /* Module Resolution */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": false,
    "noEmit": true,

    /* Interop Constraints */
    "skipLibCheck": true,
    "allowJs": false,
    "allowImportingTsExtensions": true,

    /* Completeness */
    "types": ["node", "@playwright/test"],
    "baseUrl": ".",
    "paths": {
      "@config/*": ["config/*"],
      "@core/*": ["core/*"],
      "@fixtures/*": ["fixtures/*"],
      "@pageObjects/*": ["pageObjectsManagers/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": [
    "config/**/*",
    "core/**/*",
    "fixtures/**/*",
    "pageObjectsManagers/**/*",
    "tests/**/*",
    "playwright.config.ts",
    "allure.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test-results",
    "playwright-report",
    "allure-report",
    ".allure"
  ]
}
