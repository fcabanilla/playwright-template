{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "moduleResolution": "bundler",

    /* Type Checking - Progressive Strict Mode (ADR-002) */
    /* Phase 3: Null Safety (currently enabled) */
    "strict": false, // Temporarily disabled to enable progressive adoption
    "noImplicitAny": true, // ✅ Phase 2: Enabled - Require explicit types
    "strictNullChecks": true, // ✅ Phase 3: Enabled - Catch null/undefined errors
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true, // ✅ Phase 3: Enabled - Initialize properties
    "noImplicitThis": true,
    "alwaysStrict": true,

    /* Phase 4: Code quality improvements (currently enabled) */
    "noUnusedLocals": true, // ✅ Phase 4a: Enabled - Remove unused variables
    "noUnusedParameters": false, // Disabled - Playwright fixtures often unused but required
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false, // TODO: Phase 4b - Safe array access (~99 errors)
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,

    /* Module Resolution */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": false,
    "noEmit": true,

    /* Interop Constraints */
    "skipLibCheck": true,
    "allowJs": false,
    "allowImportingTsExtensions": true,

    /* Completeness */
    "types": ["node", "@playwright/test"],
    "baseUrl": ".",
    "paths": {
      "@config/*": ["config/*"],
      "@core/*": ["core/*"],
      "@fixtures/*": ["fixtures/*"],
      "@pageObjects/*": ["pageObjectsManagers/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": [
    "config/**/*",
    "core/**/*",
    "fixtures/**/*",
    "pageObjectsManagers/**/*",
    "tests/**/*",
    "playwright.config.ts",
    "allure.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test-results",
    "playwright-report",
    "allure-report",
    ".allure"
  ]
}
